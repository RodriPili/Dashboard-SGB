@section Scripts{

<script>
var grafico1 = $("#grafico1");
var myChart1 = new Chart(grafico1, {
    type: 'bar',
    data: {
        labels: ['1', '2', '3', '4', '5', '6', '7'],
        datasets: [{
            label: 'Semana 1 y 2',
            data: [75, 49, 70, 91, 46, 75, 50],
            backgroundColor: [
              'rgba(54, 162, 235, 0.2)'
            ],
            borderColor: [
              'rgb(54, 162, 235)'
            ],
            borderWidth: 1
      }, {
            label: 'Semana 3 y 4',
            data: [47, 63, 89, 72, 63, 32, 75],
            backgroundColor: [
              'rgba(153, 102, 255, 0.2)'
            ],
            borderColor: [
              'rgb(153, 102, 255)'
            ],
            borderWidth: 1
      }],
  options: {
    plugins: {
            legend: {
                display: true,
                labels: {
                    color: 'rgb(255, 255, 255)'
                }
            }
        },
    scales: {
      y: {
            beginAtZero: true
      }
    }
    
  }
  }
});

var valores1= [65, 59, 80, 81, 56, 55, 40];
var valores2= [62, 58, 23, 74, 36, 85, 97];

setInterval(()=>{
    var nuevoValor = Math.floor(Math.random() * 60);
    nuevoValor += 20;
    var nuevoValor2 = Math.floor(Math.random() * 60);
    nuevoValor2 += 20;
        
        for (var i = 0; i < 7; i++) {
            if(i!=6){
             valores1[i]=valores1[i+1];
             valores2[i]=valores2[i+1];
            }else{
             valores1[i]=nuevoValor;
             valores2[i]=nuevoValor2;
            }
    }
    myChart2.update();

},2500);

var grafico2 = $("#grafico2");
var myChart2 = new Chart(grafico2, {
  type: 'line',
  data: {
  labels: ['1', '2', '3', '4', '5', '6', '7'],
  datasets: [{
    label: 'Proceso 1',
    data: valores1,
    fill: false,
    borderColor: 'rgb(75, 192, 192)',
    tension: 0.2
  },{
    label: 'Proceso 2',
    data: valores2, 
    fill: false,
    borderColor: 'rgb(75, 192, 192)',
    tension: 0.2
  }]
}, 
options:{
    responsive: true,
}});

var grafico3 = $("#grafico3");
var myChart3 = new Chart(grafico3, {
  type: 'doughnut',
  data: {
      labels: [
        'Positivo',
        'Neutro',
        'Negativo'
      ],
      datasets: [{
        label: 'My First Dataset',
        data: [300, 50, 100],
        backgroundColor: [
          'rgb(64, 202, 169 )',
          'rgb(54, 162, 235)',
          'rgb(255, 99, 132)'
        ],
        hoverOffset: 4
      }]
    }
});

var grafico4 = $("#grafico4");
var myChart4 = new Chart(grafico4, {
      type: 'radar',
      data: {
      labels: [
        'Lunes',
        'Martes',
        'Miercoles',
        'Jueves',
        'Viernes',
        'Sabado',
        'Domingo'
      ],
      datasets: [{
        label: 'Mes actual',
        data: [65, 59, 70, 81, 92, 97, 40],
        fill: true,
        backgroundColor: 'rgba(255, 99, 132, 0.2)',
        borderColor: 'rgb(255, 99, 132)',
        pointBackgroundColor: 'rgb(255, 99, 132)',
        pointBorderColor: '#fff',
        pointHoverBackgroundColor: '#fff',
        pointHoverBorderColor: 'rgb(255, 99, 132)'
      }, {
        label: 'Mes pasado',
        data: [28, 48, 40, 19, 96, 27, 100],
        fill: true,
        backgroundColor: 'rgba(54, 162, 235, 0.2)',
        borderColor: 'rgb(54, 162, 235)',
        pointBackgroundColor: 'rgb(54, 162, 235)',
        pointBorderColor: '#fff',
        pointHoverBackgroundColor: '#fff',
        pointHoverBorderColor: 'rgb(54, 162, 235)'
      }]
    },
  options: {
    elements: {
      line: {
        borderWidth: 3
      }
    }
  }
});

</script>
}